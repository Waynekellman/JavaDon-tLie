<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nyc.javadontlie.StartActivity"
    android:orientation="vertical"
    android:background="#4a138c"
    android:id="@+id/start_main_layout">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#12005e">
        <Button
            android:id="@+id/new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Game"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/new_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="New Game Name"
            android:background="#fff"
            android:textSize="14sp"
            android:layout_weight="20"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>
        <EditText
            android:id="@+id/money_amount_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Start Amount"
            android:inputType="number"
            android:background="#fff"
            android:textSize="14sp"
            android:layout_weight="20"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
